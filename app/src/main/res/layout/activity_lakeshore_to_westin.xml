<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".radToWestin"
    android:orientation="vertical"
    android:background="#e9e6ec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#64cba787">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/lakeshore" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/westin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="1500USD(Platinum Rooms)" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000USD(Platinum Rooms)" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="1000USD(Golden Rooms)"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500USD(Golden Rooms)" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="*****(User Review)"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****(User Review)" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="30KM(Distance from Airport)"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25(Distance from Airport)" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Available(Airport Suttle Service)"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available(Airport Shuttle Service)" />


    </LinearLayout>

</LinearLayout>