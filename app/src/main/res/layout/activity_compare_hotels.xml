<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompareHotels"
    android:orientation="vertical"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="3dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Decide...
       Where to Reside"

            android:textSize="30dp"
            android:background="#8d832e"
            android:textColor="#dacccc"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="3dp">


        <ImageView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/primier"/>

    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Select First Hotel :"
        android:textSize="20dp"
        android:background="#e4d9d9"/>

        <Spinner
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b39b9b"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp">







    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Select 2nd  Hotel :"
            android:textSize="20dp"
            android:background="#e4d9d9"/>

        <Spinner
            android:layout_marginLeft="20dp"
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b39b9b"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="3dp">




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp">


        <Button
            android:id="@+id/findthebestdealID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Find The Best Deal" />

    </LinearLayout>




</LinearLayout>