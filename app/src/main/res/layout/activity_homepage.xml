<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Homepage">


    <ImageButton

        android:id="@+id/homeButton"
        android:layout_width="113dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"

        app:srcCompat="@drawable/log" />

    <Button


        android:id="@+id/button"
        android:background="#CC4484FF"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:text="Hotel Name"
        android:fontFamily="casual"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/button2"
        android:background="#CCA990DD"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button"
        android:fontFamily="casual"
        android:text="Car Rental"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/currencyConverterID"
        android:background="#CCff9f34"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button"
        android:text="Currency Converter"
        android:fontFamily="casual"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button4"
        android:background="#CCff2f11"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button"
        android:text="Language Assistant"
        android:fontFamily="casual"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button5"
        android:background="#CCa0ff6f"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/currencyConverterID"
        android:text="Compare Hotels"
        android:fontFamily="casual"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button6"
        android:background="#CCffff35"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/currencyConverterID"
        android:text="Places to See"
        android:fontFamily="casual"
        android:textColor="@drawable/colorbutton"
        android:textStyle="bold"/>




</RelativeLayout>